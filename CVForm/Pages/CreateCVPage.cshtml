@page
@model CVForm.Pages.CreateCVPageModel
@{
}
<div class="container text-center d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 180px)">
    <div class="col">
        <h2 class="text-center mb-4">Insert CV Title</h2>
        <form id="cvForm">
            <div class="form-group">
                <input type="text" class="form-control mb-4" id="CVName" placeholder="Enter CV Title" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a href="/" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

